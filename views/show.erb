<% id = @memo["id"] %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="/">Top</a></li>
    <li class="is-active"><a href="#" aria-current="page">Show memo</a></li>
  </ul>
</nav>
<div class="content">
  <h3 class="title is-3"><%= @memo["title"] %></h2>
  <p><%= @memo["body"].gsub(/(\r\n|\r|\n)/, "<br>") %></p>
</div>
<div class="field is-grouped">
  <div class="control">
    <a class="button is-success is-outlined" href="/<%= id %>/edit">編集</a>
  </div>
  <div class="control">
    <form action="/<%= id %>/edit" method="post">
      <input type="hidden" name="_method" value="delete">
      <button class="button is-danger is-outlined">削除</button>
    </form>
  </div>
  <div class="control">
    <a class="button" href="/">戻る</a>
  </div>
</div>
